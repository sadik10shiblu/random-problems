#include<stdio.h>
int main(){
long long x;

while(scanf("%lld",&x))//in for loop we are using (;;) that seems quit weird
    {if(x==1999){       //but in while loop no need to use(;;) this cause
        printf("Correct\n"); //initialization and increa/decreament are used to be outside
        break; // of the loop and if not need then don't put it.
    }
    else{
        printf("Wrong\n");
    }
}



return 0;
}
*****for loop*****

#include<stdio.h>
int main(){
long long x;

for(;scanf("%lld",&x);)
    {if(x==1999){       
        printf("Correct\n"); 
        break; 
    }
    else{
        printf("Wrong\n");
    }
}



return 0;
}

