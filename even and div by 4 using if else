#include<stdio.h>
int main(){
int i;

printf("Enter the number: ");
scanf("%d",&i);
if(i%2==0)
{
    if(i%4==0)
    {
        printf("The number is even and also divisble by 4");
    }
    else{
        printf("The number is even and not divisble by 4");
    }
}
    else
    {
        printf("The number is not even");
    }

return 0;
}
